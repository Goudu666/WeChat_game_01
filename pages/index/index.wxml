<!--pages/index/index.wxml-->
<view class="index-container">
  <!-- 游戏标题 -->
  <view class="game-title">
    <text class="title-text">修仙文字冒险</text>
    <text class="subtitle-text">踏上修仙之路，体验奇妙冒险</text>
  </view>

  <!-- 开始游戏按钮 -->
  <view class="start-section">
    <button class="start-btn" bindtap="startGame">
      <text>开始游戏</text>
    </button>
    
    <button class="continue-btn" bindtap="continueGame" wx:if="{{hasSaveData}}">
      <text>继续游戏</text>
    </button>
  </view>

  <!-- 游戏特色 -->
  <view class="features-section">
    <view class="feature-item">
      <text class="feature-icon">⚔️</text>
      <text class="feature-title">修仙战斗</text>
      <text class="feature-desc">体验中式修仙的战斗系统</text>
    </view>
    
    <view class="feature-item">
      <text class="feature-icon">🗺️</text>
      <text class="feature-title">探索世界</text>
      <text class="feature-desc">探索广阔的修仙世界</text>
    </view>
    
    <view class="feature-item">
      <text class="feature-icon">📚</text>
      <text class="feature-title">收集装备</text>
      <text class="feature-desc">收集各种修仙装备和道具</text>
    </view>
  </view>

  <!-- 设置按钮 -->
  <view class="settings-section">
    <button class="settings-btn" bindtap="openSettings">
      <text>游戏设置</text>
    </button>
  </view>
</view>