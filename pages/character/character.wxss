/* pages/character/character.wxss */
.character-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2c3e50 100%);
  color: #ffffff;
  padding: 20rpx;
}

/* 角色头部信息 */
.character-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #3cc51f;
}

.level-badge {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  background: #e74c3c;
  color: #ffffff;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.basic-info {
  flex: 1;
}

.character-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.cultivation-level {
  display: block;
  font-size: 28rpx;
  color: #3cc51f;
}

/* 面板通用样式 */
.panel-title {
  background: linear-gradient(135deg, #3cc51f 0%, #2ecc71 100%);
  padding: 20rpx;
  border-radius: 10rpx 10rpx 0 0;
  text-align: center;
}

.panel-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 属性面板 */
.stats-panel {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  color: #3cc51f;
  font-weight: bold;
}

/* 状态面板 */
.status-panel {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.status-item {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #cccccc;
}

.progress-bar {
  flex: 1;
  height: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.health-fill {
  background: linear-gradient(90deg, #e74c3c 0%, #c0392b 100%);
}

.mana-fill {
  background: linear-gradient(90deg, #3498db 0%, #2980b9 100%);
}

.exp-fill {
  background: linear-gradient(90deg, #f39c12 0%, #e67e22 100%);
}

.status-value {
  width: 120rpx;
  text-align: right;
  font-size: 24rpx;
  color: #ffffff;
}

/* 装备面板 */
.equipment-panel {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.equipment-grid {
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}

.equipment-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.slot-label {
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 15rpx;
}

.equipment-item {
  width: 120rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3cc51f 0%, #2ecc71 100%);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.equipment-item text {
  font-size: 24rpx;
  color: #ffffff;
}

.empty-slot {
  width: 120rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-slot text {
  font-size: 24rpx;
  color: #cccccc;
}

/* 技能面板 */
.skills-panel {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.skills-list {
  padding: 30rpx;
}

.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.skill-item:last-child {
  border-bottom: none;
}

.skill-name {
  font-size: 28rpx;
  color: #ffffff;
}

.skill-level {
  font-size: 24rpx;
  color: #3cc51f;
}

.no-skills {
  padding: 60rpx;
  text-align: center;
}

.no-skills text {
  font-size: 28rpx;
  color: #cccccc;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.action-btn {
  flex: 1;
  background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
  color: #ffffff;
  border: none;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.action-btn:active {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}